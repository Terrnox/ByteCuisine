@page "/"
@inject NavigationManager Navigation

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

<style>

    .login-page {
        display: flex;
        min-height: 100vh;
        align-items: stretch; /* Zapewnia rozciągnięcie obrazu i formularza na całą wysokość */
    }

    /* Teraz .login-side jest kontenerem dla obrazu */
    .login-side {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .login-side img {
            width: 100%;
            height: 100vh; /* Zapewnia, że obraz się skaluje */
        }

    .login-container {
        flex: 1;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .login-brand img {
        max-width: 200px;
    }

    .login-form {
        width: 100%;
        max-width: 320px; /* Możesz dostosować szerokość formularza do swoich potrzeb */
    }

    .form-group {
        position: relative;
    }

    .material-symbols-outlined {
        position: absolute !important;
        left: 10px !important;
        top: 50% !important;
        transform: translateY(-95%) !important;
        pointer-events: none; /* Zapobiega kliknięciu na ikonę */
    }

    input#username {
        padding-left: 40px !important;
        margin-bottom: 23px !important;
    }

    input#password {
        padding-left: 40px !important;
        margin-bottom: 23px !important;
    }

    .form-group input {
        width: 100% !important;
        padding: 10px 15px !important; /* Zwiększa padding dla input */
        font-size: 1rem !important;
        border: 1px solid #ccc !important; /* Dodaje obramowanie */
        border-radius: 4px !important; /* Dodaje zaokrąglone rogi */
    }

    .btn-login {
        background-color: #5DAB02; /* Zielony */
        color: white;
        width: 193px;
        height: 45px;
        margin-bottom: 25px;
        cursor: pointer;
        border-radius: 25px;
        font-size: 1rem;
        padding: 10px 15px;
        border: none;
        margin-top: 1rem;
    }

        .btn-login:hover {
            background-color: #3e8e41; /* Ściemniony kolor przycisku po najechaniu */
        }



    .forgot-password, .login-or, .social-login {
        text-align: center;
        margin-top: 1rem;
    }

    /* Dodaj tutaj wszelkie inne style, których potrzebujesz */
    .welcome {
        text-align: center;
        margin-bottom: 44px;
    }

    .login-form {
        width: 100%; /* Szerokość kontenera względem rodzica */
        max-width: 320px; /* Maksymalna szerokość kontenera */
        margin: 10px; /* Automatyczne marginesy dla centrowania poziomego */
        text-align: center; /* Centruje tekst, a tym samym elementy inline i inline-block wewnątrz */
    }


    a {
        color: #5DAB02; /* Kolor dla nieodwiedzonego linku */
        text-decoration: none;
    }

        a:visited {
            color: #5DAB02; /* Kolor dla odwiedzonego linku */
        }

        a:hover {
            color: black; /* Kolor przy najechaniu myszką */
        }

        a:active {
            color: #5DAB02; /* Kolor dla aktywnego linku */
        }

    .login-or {
        display: flex;
        align-items: center;
        text-align: center;
        margin-top: 1rem; /* Dostosuj, aby uzyskać pożądaną przestrzeń */
        margin-bottom: 1rem; /* Dostosuj, aby uzyskać pożądaną przestrzeń */
        color: #5DAB02;
    }

        .login-or .line {
            flex: 1; /* Sprawia, że linie zajmują dostępną przestrzeń po bokach */
            height: 1px; /* Wysokość linii */
            background-color: #5DAB02; /* Kolor linii */
            margin: 0 10px; /* Odstęp między linią a tekstem */
        }

        .login-or span {
            white-space: nowrap; /* Zapobiega zawijaniu tekstu */
            padding: 0 10px; /* Odstęp od linii */
        }

    .social-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        font-size: 14px;
        border: 1px solid #5DAB02; /* Corrected the border property */
        border-radius: 25px; /* Adjust as needed to match the pill-like shape */
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .social-btn img {
            margin-right: 8px; /* space between icon and text */
        }

    /* Specific styles for Facebook button */
    /* Container for social buttons to ensure they are in a row */
    .social-btn-container {
        display: flex; /* Use flexbox to lay out children in a row */
        justify-content: center; /* Center the buttons in the container */
        gap: 10px; /* Space between the buttons */
    }

    .social-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: #5DAB02; /* Text color */
        padding: 10px 20px;
        text-decoration: none;
        font-size: 14px;
        border: 1px solid #5DAB02; /* Solid border */
        border-radius: 25px; /* Pill-like shape */
        cursor: pointer;
        transition: background-color 0.3s;
        width: 172px; /* Fixed width */
        height: 56px; /* Fixed height */
    }

        .social-btn img {
            margin-right: 8px; /* Space between icon and text */
        }

    /* Specific styles for Facebook button */
    .btn-facebook {
        background-color: white; /* Facebook button background */
    }

    /* Specific styles for Google button */
    .btn-google {
        background-color: white; /* Google button background */
    }

    /* Hover effects for both buttons */
    .social-btn:hover {
        filter: brightness(85%);
    }

</style>

<div class="login-page">
    <div class="login-container">
        <div class="login-brand">
            <img src="images/logo.png" alt="ByteCuisine Logo" />
        </div>
        <div class="login-form">
            <div class="welcome">
                <h3>Welcome!</h3>
            </div>
            <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                <div class="form-group">
                    <span class="material-symbols-outlined">
                        account_circle
                    </span>
                    <InputText id="username" @bind-Value="@loginModel.Username" class="input" placeholder="Username" />
                </div>
                <div class="form-group">
                    <span class="material-symbols-outlined">
                        key
                    </span>
                    <InputText id="password" @bind-Value="@loginModel.Password" class="input" placeholder="Password" type="password" />
                </div>
                <button type="submit" onclick="@NavigateToNewPage" class="btn-login">Login</button>
            </EditForm>
            <div class="forgot-password">
                <a href="#">Forgot your password?</a>
            </div>
            <div class="login-or">
                <div class="line"></div>
                <span>OR</span>
                <div class="line"></div>
            </div>
            <div class="social-btn-container">
                <!-- Facebook Button -->
                <button class="social-btn btn-facebook">
                    <img src="images/facebook.png" alt="Facebook">
                    Facebook
                </button>

                <!-- Google Button -->
                <button class="social-btn btn-google">
                    <img src="images/google.png" alt="Google">
                    Google
                </button>
            </div>
        </div>
    </div>
    <div class="login-side">
        <img src="images/side.png" alt="Side Image" />
    </div>
</div>

@code {

    private void NavigateToNewPage()
    {
        Navigation.NavigateTo("/index");
    }

    private LoginModel loginModel = new LoginModel();

    private void HandleLogin()
    {
        // Logika logowania
    }

    public class LoginModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}