@page "/Navigation";

<link rel="stylesheet" href="/css/navi.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<div>
    <!-- Struktura paska nawigacyjnego -->
    <div class="navbar">
        <div class="menu-button" @onclick="ToggleMenu">
            ☰
        </div>        
        <div class="logo">
            <img src="/images/Logo+Napis.png" />
        </div>
        <input type="text" class="search-box" placeholder="Search">
        <div class="nav-icons">
            <NavLink class="icon-link" href="/profile">
                <i class="profile-icon"></i>
            </NavLink>
            <button class="logout-button">Logout</button>
        </div>
        <div class="side-menu" style="@(isMenuOpen ? "left:0" : "left:-250px")">
            <div class="menu-item">
                <span class="material-symbols-outlined">home</span>
                <span class="menu-text">Home</span>
            </div>
            <div class="menu-item">
                <span class="material-symbols-outlined">shopping_cart</span>                
                <span class="menu-text">Shopping cart</span>
            </div>
            <div class="menu-item">
                <span class="material-symbols-outlined">calendar_month</span>                
                <span class="menu-text">Calendar</span>
            </div>
            <div class="menu-item">
                <span class="material-symbols-outlined">team_dashboard</span>                
                <span class="menu-text">Dashboard</span>
            </div>
            <div class="menu-item">
                <span class="material-symbols-outlined">finance</span>                
                <span class="menu-text">Statistics</span>
            </div>
            <div class="menu-item">
                <span class="material-symbols-outlined">notifications</span>
                <span class="menu-text">Notifications</span>
            </div>

            <div class="menu-footer">
                <div class="menu-item">
                    <span class="material-symbols-outlined">settings</span>
                    <span class="menu-text">Settings</span>
                </div>
                <div class="menu-item">
                    <span class="material-symbols-outlined">account_circle</span>
                    <span class="menu-text">User</span>
                </div>
            </div>
        </div>
    </div>
    @if (isMenuOpen)
    {
        <div class="side-menu-overlay" @onclick="ToggleMenu">
            <!-- Pusty div pełniący rolę tła, które po kliknięciu zamyka menu -->
        </div>
    }
</div>


@code {
    private bool isMenuOpen = false;
    private string currentActiveItem = "";

    void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

    bool IsActive(string itemName)
    {
        return currentActiveItem == itemName;
    }

    void NavigateTo(string itemName)
    {
        currentActiveItem = itemName;
        // Tutaj dodaj logikę nawigacji, np. NavigationManager.NavigateTo(url)
        ToggleMenu(); // To zamknie menu po wybraniu elementu
    }
}


